package questao3;

public class Funcionario {
    private String nome;
    private String cpf;
    private String telefone;
    private String email;
    private double salario;
    private String matricula;
    private String senha;

    public Funcionario(String nome, String cpf, String telefone, String email, double salario, String matricula, String senha) {
        this.nome = nome;
        this.cpf = cpf;
        this.telefone = telefone;
        this.email = email;
        this.salario = salario;
        this.matricula = matricula;
        this.senha = senha;
    }

    public void exibirDados() {
        System.out.println("Funcionario: " + nome + " | CPF: " + cpf + " | Telefone: " + telefone + " | Email: " + email +
                " | Salario: " + salario + " | Matricula: " + matricula);
    }
}

